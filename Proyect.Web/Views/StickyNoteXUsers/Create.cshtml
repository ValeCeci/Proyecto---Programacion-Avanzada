@model Proyect.Data.StickyNoteXUser

@{
    ViewBag.Title = "Crear relación Usuario - Nota";
}

<h2>Crear relación Usuario - Nota</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Asociar un Usuario con una Nota</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <!-- Combo de selección de Usuario -->
        <div class="form-group">
            @Html.LabelFor(model => model.UserID, "Usuario", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("UserID", null, "-- Seleccione un usuario --", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.UserID, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Combo de selección de Nota -->
        <div class="form-group">
            @Html.LabelFor(model => model.StickynoteID, "Nota", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("StickynoteID", null, "-- Seleccione una nota --", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.StickynoteID, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Botón de guardar -->
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar relación" class="btn btn-primary" />
                @Html.ActionLink("Volver a la lista", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
