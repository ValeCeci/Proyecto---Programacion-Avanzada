<div class="auth-container">

    <!-- IZQUIERDA -->
    <div class="auth-left">
        <h1>Crea<br>Cuenta<br>en NoteHub</h1>
    </div>

    <!-- DERECHA -->
    <div class="auth-right">
        <div class="auth-box">

            <h2 class="auth-title">Registro</h2>
            <p class="auth-subtitle">Completa los datos para registrarte.</p>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }

            <form method="post" autocomplete="off" action="@Url.Action("Register", "Auth")" class="auth-form">
                @Html.AntiForgeryToken()

                <div class="input-group">
                    <label>Nombre de Usuario</label>
                    <input name="Username" id="Username" type="text" autocomplete="off" value="@(Model?.Username ?? "")" required />
                </div>

                <div class="input-group">
                    <label>Correo Electrónico</label>
                    <input name="Email" id="Email" type="email" autocomplete="off" value="@(Model?.Email ?? "")" required />
                </div>

                <div class="input-group">
                    <label>Contraseña</label>
                    <input name="Password" id="Password" type="password" autocomplete="new-password" required />
                </div>

                <button type="submit" class="btn-auth">Registrar</button>

                <p class="auth-footer">
                    ¿Ya tienes cuenta?
                    <a href="@Url.Action("Login", "Auth")">Volver al Login</a>
                </p>
            </form>
        </div>
    </div>
</div>
